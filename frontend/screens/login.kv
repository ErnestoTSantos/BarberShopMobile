<LoginScreen>:
    name: "login"

    MDFloatLayout:
        MDLabel:
            text: "Login"
            halign: "center"
            pos_hint: {"center_y": .8}

        MDTextField:
            id: email
            hint_text: "E-mail"
            pos_hint: {"center_x": .5, "center_y": .6}
            size_hint_x: .8

        MDTextField:
            id: senha
            hint_text: "Senha"
            password: True
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .8

        MDRaisedButton:
            text: "Entrar"
            pos_hint: {"center_x": .5, "center_y": .4}
            on_release:
                app.root.current = "home"
